{
  "name": "Better Pull Request for GitHub",
  "short_name": "Better PRs",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "*://*.github.com/*"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "better_github_prs.js"
      ],
      "css": []
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    },
    "default_popup": "options.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "web_accessible_resources": ["options.html", "*.woff2"],
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "manifest_version": 2,
  "version": "1.0.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
